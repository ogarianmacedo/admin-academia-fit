@model  ProjetoAcademia.Models.Ficha

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PDF</title>

    <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="collection">
        <div class="collection-item">
            @await Component.InvokeAsync("DadosAluno", Model.AlunoId)
        </div>

        <div class="row collection-item">
            <div class="col s6">
                <p><strong>Cadastro: </strong> @Model.Cadastro</p>
            </div>

            <div class="col s6">
                <p><strong>Validade: </strong> @Model.Validade</p>
            </div>
        </div>
    </div>

    <div class="collection">
        <div class="collection-item">
            @await Component.InvokeAsync("ListagemExercicioFicha", Model.FichaId)
        </div>
    </div>
</body>
</html>
