@model ProjetoAcademia.ViewModels.AdministradorViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col s10 offset-s1">
            <div class="collection with-header c1">
                <h6 class="collection-header center c1">EFETUAR LOGIN</h6>

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="red-text darken-3 center"></div>

                    <div class="collection-item c1">
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Email" class="validate" id="Email" />
                                <label for="Email">E-mail</label>
                                <span asp-validation-for="Email" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Senha" class="validate" id="Senha" />
                                <label for="Senha">Senha</label>
                                <span asp-validation-for="Senha" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item right">
                            <input type="submit" value="Entrar" class="btn btn-small teal darken-3" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

