@model ProjetoAcademia.Models.Administrador

@{
    ViewData["Title"] = "Cadastrar Administrador";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header c1">
                <h5 class="collection-header c1">Cadastrar Administrador</h5>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="red-text darken-3 center"></div>

                    <div class="collection-item c1">
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Nome" class="validate" id="Nome" />
                                <label for="Nome">Nome</label>
                                <span asp-validation-for="Nome" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Email" class="validate" id="Telefone" />
                                <label for="Email">Email</label>
                                <span asp-validation-for="Email" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Senha" type="password" class="validate" id="Senha" />
                                <label for="Senha">Senha</label>
                                <span asp-validation-for="Senha" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item right">
                            <input type="submit" value="Salvar" class="btn btn-small teal darken-3" />
                            <a asp-action="Index" asp-controller="Professor" class="btn btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

<script>
</script>
}
