@model ProjetoAcademia.Models.Aluno

@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header c1">
                <h5 class="collection-header c1">Cadastrar Aluno</h5>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="red-text darken-3 center"></div>

                    <div class="collection-item c1">
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="NomeCompleto" class="validate" id="Nome" />
                                <label for="NomeCompleto">Nome Completo</label>
                                <span asp-validation-for="NomeCompleto" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Idade" class="validate" id="Nome" />
                                <label for="Idade">Idade</label>
                                <span asp-validation-for="Idade" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Peso" class="validate" id="Nome" />
                                <label for="Peso">Peso</label>
                                <span asp-validation-for="Peso" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <label for="ObjetivoId">Objetivo</label>
                            <div class="input-field">
                                <select asp-for="ObjetivoId" class="browser-default" asp-items="ViewBag.ObjetivoId"></select>
                                <span asp-validation-for="ObjetivoId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <label for="ProfessorId">Professor</label>
                            <div class="input-field">
                                <select asp-for="ProfessorId" class="browser-default" asp-items="ViewBag.ProfessorId"></select>
                                <span asp-validation-for="ProfessorId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="FrequenciaSemanal" class="validate" id="Nome" />
                                <label for="FrequenciaSemanal">Frequência Semanal</label>
                                <span asp-validation-for="FrequenciaSemanal" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item right">
                            <input type="submit" value="Salvar" class="btn btn-small teal darken-3" />
                            <a asp-action="Index" class="btn btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('select').formSelect();
        })
    </script>
}
